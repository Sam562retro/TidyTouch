<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Home Page</title>
    <link rel="stylesheet" href="graph.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
        href="https://fonts.googleapis.com/css2?family=Alex+Brush&family=Alfa+Slab+One&family=Bebas+Neue&family=Black+Ops+One&family=Delicious+Handrawn&family=Montserrat:wght@600;700;800;900&family=Mouse+Memoirs&family=Oswald:wght@200;300;400;500;600;700&family=Pacifico&family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,900&family=Roboto+Mono:wght@100;200;300;400;500;600;700&family=Roboto+Slab:wght@100;300;500&display=swap"
        rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.3/font/bootstrap-icons.css" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.4/Chart.js"></script>
</head>

<body>
    <div class="nav">
        <style>
            .nav {
                color: white;
                display: flex;
                align-items: center;
                justify-content: space-between;
                width: 100vw;
                height: 7vh;
                box-shadow: rgba(0, 0, 0, 0.25) 0px 54px 55px,
                    rgba(0, 0, 0, 0.12) 0px -12px 30px, rgba(0, 0, 0, 0.12) 0px 4px 6px,
                    rgba(0, 0, 0, 0.17) 0px 12px 13px, rgba(0, 0, 0, 0.09) 0px -3px 5px;
                position: fixed;
                z-index: 999;
                background-color: #262626;
                top: 0;
            }
    
            .name {
                font-size: 3.5vh;
                margin-left: 2vw;
                display: flex;
                justify-content: center;
                align-items: center;
            }
    
            .name img {
                aspect-ratio: 1/1;
                max-width: 2vw;
                margin-right: 1vw;
            }
    
            .name .logo {
                display: flex;
                align-items: center;
                justify-content: center;
            }
    
            .items {
                display: flex;
                justify-content: flex-end;
            }
    
            .nav-item {
                font-size: 2vh;
                color: #d9d9d9;
                transition: all 300ms ease-out;
                cursor: pointer;
                position: relative;
                text-decoration: none;
                margin-right: 2vw;
            }
    
            .nav-item::after {
                content: "";
                height: 1px;
                background: #d9d9d9;
                position: absolute;
                left: 0;
                right: 0;
                bottom: -0.1vh;
                opacity: 0;
                transform: scaleX(0);
                transition: all 250ms cubic-bezier(0.25, 0.46, 0.45, 0.94) 0s;
            }
    
            .nav-item:hover::after {
                transform: scaleX(1);
                opacity: 1;
            }
    
            a:link {
                text-decoration: none;
            }
    
            a:hover {
                text-decoration: none;
            }
    
            a {
                text-decoration: none;
            }
    
            @media only screen and (max-width: 620px) {
                .nav-item {
                    margin-right: 4vw;
                    font-size: 3vw;
                }
    
                .name {
                font-size: 5.5vw;
                }
    
                .name {
                    margin-left: 4vw;
                }
            }
        </style>
        <div class="name">
            <div class="logo">
                <!-- <img src="DocConnect.png" alt=""> -->
            </div>
            TidyTouch
        </div>
        <div class="items">
            <a href="complaint.html">
                <div class="nav-item">Complaint</div>
            </a>
            <a href="index.html">
                <div class="nav-item">Rate</div>
            </a>
            <a href="graph.html">
              <div class="nav-item">Graph</div>
          </a>
        </div>
    </div>
    <div class="container">
        <section class="wrapper">
            <label for="cars">Class:&nbsp;&nbsp;</label>
            <select name="cars" id="cars">
              <option value="volvo">11-C</option>
              <option value="saab">11-D</option>
              <option value="opel">11-F</option>
              <option value="audi">11-G</option>
            </select>
            <!-- <div class="top">11-F</div>
            <div class="bottom" aria-hidden="true">11-F</div> -->
          </section>
        <div class="classPerform">
            <div class="heading">
                Class Performance over the year:
            </div>
            <canvas id="classPerform"></canvas>
        </div>
        <div class="classPerform">
            <div class="heading">
                Performance of other classes in the past week:
            </div>
            <canvas id="chartAllClass"></canvas>
        </div>
    </div>
    <script>
        var data = {
            labels: ["A", "B", "C", "D", "E", "F", "G", "H", "I"],
            datasets: [{
                label: "Rating out of 5",
                backgroundColor: "#fca21159",
                borderColor: "#FCA311",
                borderWidth: 2,
                hoverBackgroundColor: "rgba(255,99,132,0.4)",
                hoverBorderColor: "rgba(255,99,132,1)",
                data: [1, 2, 3, 4, 5, 4, 2, 3, 4],
            }]
        };

        var options = {
            maintainAspectRatio: false,
            responsive: true,
            scales: {
                yAxes: [{
                    ticks: {
                        fontSize: 10,
                    }
                }],
                xAxes: [{
                    ticks: {
                        fontSize: 10,
                        beginAtZero: true
                    }
                }],
                y: {
                    stacked: true,
                    grid: {
                        display: true,
                        color: "rgba(255,99,132,0.2)"
                    }
                },
                x: {
                    grid: {
                        display: false
                    }
                }
            }
        };

        new Chart('chartAllClass', {
            type: 'horizontalBar',
            options: options,
            data: data
        });

        var data2 = {
            labels: ["Jan", "Feb", "Mar", "Apr", "May", "Jun", "Jul", "Aug", "Sept", "Oct", "Nov", "Dec"],
            datasets: [{
                label: "Rating out of 5",
                backgroundColor: "#fca21159",
                borderColor: "#FCA311",
                borderWidth: 2,
                hoverBackgroundColor: "rgba(255,99,132,0.4)",
                hoverBorderColor: "rgba(255,99,132,1)",
                data: [5, 4, 2, 4, 3, 4, 1, 3, 5, 5, 3, 3],
            }]
        };

        var options2 = {
            maintainAspectRatio: false,
            responsive: true,
            scales: {
                yAxes: [{
                    ticks: {
                        fontSize: 10,
                        beginAtZero: true
                    }
                }],
                xAxes: [{
                    ticks: {
                        fontSize: 10,
                    }
                }],
                y: {
                    stacked: true,
                    grid: {
                        display: true,
                        color: "rgba(255,99,132,0.2)"
                    }
                },
                x: {
                    grid: {
                        display: false
                    }
                }
            }
        };
        new Chart('classPerform', {
            type: 'line',
            options: options2,
            data: data2
        });

    </script>
</body>

</html>